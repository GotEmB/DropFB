@import nib

@keyframes cloudPulse
	0%
		color rgba(255, 255, 255, 0)
	50%
		color white
	100%
		color rgba(255, 255, 255, 0)

body
	padding-top 70px

.form-control
	input&[type="text"].caption-box, textarea&.description-box
		border none
		border-radius 0
		box-shadow none
		outline none
		font-family "Helvetica Neue", Helvetica, Arial, sans-serif
		padding 0
		background-color transparent

		&[readonly], &[disabled]
			cursor default
			background-color transparent

	input&[type="text"].caption-box
		font-weight 500
		line-height 1.1
		font-size 24px

	textarea&.description-box
		font-size 14px
		resize none

#navbar2
	position relative

	&.affix
		position fixed
		left 0
		right 0
		top 70px
		z-index 100

		& + div
			margin-top 70px

		& > .backdrop
			position absolute
			left 0
			right 0
			top -20px
			bottom 0
			background-color white
			background linear-gradient(top, white 0, white 50px, rgba(255, 255, 255, 0))

@media (max-width: 767px)
	.hide-sm
		display none

.icon-inline.icon-stack
	width 1em
	height 1em
	font-size 0.8em
	line-height 1em
	vertical-align -12%

.thumbnail.task
	text-align center
	transition margin 0, border-width 0
	position relative

	&.selectable:hover
		border-color rgb(66, 139, 202)

		.photoContainer
			cursor pointer

	&.selected
		border-color rgb(66, 139, 202)
		border-width 2px
		margin -1px

	.photoContainer
		position relative
		width 100%
		padding-bottom 75%

		img
			position absolute
			top 0
			left 0
			width 100%
			height 100%

		.placeholder
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color rgb(238, 238, 238)

			span.lead
				position absolute
				left 0
				right 0
				top 50%
				font-size 5em
				line-height 1em
				margin-top -0.5em
				color #aaa

		.postingIcon
			position absolute
			left 0
			right 0
			width 100%
			height 100%

			span.lead
				position absolute
				left 0
				right 0
				top 50%
				font-size 5em
				line-height 1em
				margin-top -0.5em

				i
					color inherit

				&:nth-of-type(1)
					font-size 5em
					color rgba(0, 0, 0, 0.8)

				&:nth-of-type(2)
					font-size 3em
					animation cloudPulse 2s ease-in-out 0 infinite

				&:nth-of-type(3)
					font-size 3em
					color white

				&:nth-of-type(4), &:nth-of-type(5)
					font-size 3em
					color rgba(255, 255, 255, 0)

			div
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				background-color rgba(200, 200, 200, 0.5)

			&.success

				& > span.lead:nth-of-type(1), & > span.lead:nth-of-type(2), & > span.lead:nth-of-type(3)
					color rgb(92, 184, 92)
					animation none
					transition color 250ms

				& > span.lead:nth-of-type(4)
					color rgb(255, 255, 255)
					transition color 250ms

			&.failure

				& > span.lead:nth-of-type(1), & > span.lead:nth-of-type(2), & > span.lead:nth-of-type(3)
					color rgb(217, 83, 79)
					animation none
					transition color 250ms

				& > span.lead:nth-of-type(5)
					color rgb(255, 255, 255)
					transition color 250ms

	.selectedIndicator
		position absolute
		background-color rgb(66, 139, 202)
		top 0
		right 0
		border-bottom-left-radius 4px
		border-bottom solid white 4px
		border-left solid white 4px

		i
			display block
			padding 9px 8px 9px 9px

	.videoIcon
		position absolute
		left 4px
		bottom 4px
		color white
		text-outline black

		i
			display block
			padding 9px 9px 9px 8px
			background-color rgba(0, 0, 0, 0.75)
			border-radius 4px

.navbar .btn-toolbar
	margin 7px 0

	&.pull-left
		margin-left 15px

	&.pull-right
		margin-right 15px

.btn.btn-text-left
	text-align left
	padding-left 12px
	padding-right 12px

ul.dropdown-menu li.selected a
	color white
	text-decoration none
	background-color rgb(66, 139, 202)