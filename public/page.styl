@import nib

body
	padding-top 70px

.btn-primary
	& > [class^="icon-"], & > [class*=" icon-"]
		font-size 1.5em
		line-height 0.5em

.form-control
	input&[type="text"].caption-box, textarea&.description-box
		border none
		border-radius 0
		box-shadow none
		outline none
		font-family "Helvetica Neue", Helvetica, Arial, sans-serif
		padding 0
		background-color transparent

		&[readonly], &[disabled]
			cursor default
			background-color transparent

	input&[type="text"].caption-box
		font-weight 500
		line-height 1.1
		font-size 24px

	textarea&.description-box
		font-size 14px
		resize none

#navbar2
	position relative

	&.affix
		position fixed
		left 0
		right 0
		top 70px
		z-index 100

		& + div
			margin-top 70px

		& > .backdrop
			position absolute
			left 0
			right 0
			top -20px
			bottom 0
			background-color white
			background linear-gradient(top, white 0, white 50px, rgba(255, 255, 255, 0))

@media (max-width: 767px)
	.hide-sm
		display none

.icon-stack
	width 1em
	height 1em
	line-height 1em
	vertical-align -17%

.thumbnail.task
	text-align center
	transition margin 0, border-width 0
	position relative

	&:hover
		border-color rgb(66, 139, 202)

	&.selected
		border-color rgb(66, 139, 202)
		border-width 2px
		margin -1px

	.photoContainer
		position relative
		width 100%
		padding-bottom 75%
		cursor pointer

		img
			position absolute
			top 0
			left 0
			width 100%
			height 100%

		.placeholder
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color rgb(238, 238, 238)

			span.lead
				position absolute
				left 0
				right 0
				top 50%
				font-size 5em
				line-height 1em
				margin-top -0.5em
				color #aaa

	.selectedIndicator
		position absolute
		background-color rgb(66, 139, 202)
		top 0
		right 0
		border-bottom-left-radius 4px
		border-bottom solid white 4px
		border-left solid white 4px

		i
			display block
			padding 9px 8px 9px 9px

	.videoIcon
		position absolute
		left 4px
		bottom 4px
		color white
		text-outline black

		i
			display block
			padding 9px 9px 9px 8px
			background-color rgba(0, 0, 0, 0.75)
			border-radius 4px