@import nib

@keyframes cloudPulse
	0%
		fill white
	50%
		fill rgba(255, 255, 255, 0)
	100%
		fill white

body
	padding-top 70px

.form-control
	textarea&.caption-box
		border none
		border-radius 0
		box-shadow none
		outline none
		font-family "Helvetica Neue", Helvetica, Arial, sans-serif
		padding 0
		background-color transparent
		font-weight 500
		resize none
		font-size 14px
		line-height 20px
		height 40px

		&[readonly], &[disabled]
			cursor default
			background-color transparent

#navbar2
	position relative

	nav.navbar
		margin-left -15px
		margin-right -15px

		& > .pull-left
			margin-left 15px

		& > .pull-right
			margin-right 15px

	&.affix
		position fixed
		left 0
		right 0
		top 70px
		z-index 100
		margin-left 0
		margin-right 0

		& + div
			margin-top 70px

		& > .backdrop
			position absolute
			left 0
			right 0
			top -20px
			bottom 0
			background-color white
			background linear-gradient(top, white 0, white 50px, rgba(255, 255, 255, 0))

		nav.navbar
			margin-left 0
			margin-right 0

@media (max-width: 767px)
	.hide-sm
		display none

.icon-inline.icon-stack
	width 1em
	height 1em
	font-size 0.8em
	line-height 1em
	vertical-align -12%

.thumbnail.task
	text-align center
	transition margin 0, border-width 0
	position relative

	&.selectable:hover
		border-color rgb(66, 139, 202)

		.photoContainer
			cursor pointer

	&.selected
		border-color rgb(66, 139, 202)
		border-width 2px
		padding 3px

	.photoContainer
		position relative
		width 100%
		padding-bottom 75%

		img
			position absolute
			top 0
			left 0
			width 100%
			height 100%

		.placeholder
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-color rgb(238, 238, 238)

			span.lead
				position absolute
				left 0
				right 0
				top 50%
				font-size 5em
				line-height 1em
				margin-top -0.5em
				color #aaa

		.postingIcon
			position absolute
			left 0
			right 0
			width 100%
			height 100%

			div
				
				&:nth-of-type(1)
					position absolute
					top 0
					left 0
					width 100%
					height 100%
					background-color rgba(200, 200, 200, 0.5)

				&:nth-of-type(2)
					position absolute
					top 50%
					left 50%
					margin-top -30px
					margin-left -30px
					height 60px
					width 60px
					background-color rgba(0, 0, 0, 0.8)
					border-radius 10px

			svg
				display block
				position absolute
				top 50%
				left 50%
				margin-top -25px
				margin-left -25px

				circle
					stroke white
					stroke-width 2px
					fill rgba(255, 255, 255, 0)
					animation cloudPulse 2s ease-in-out 0 infinite

			i
				position absolute
				display block
				text-align center
				top 50%
				margin-top -30px
				line-height 60px
				width 100%
				color rgba(255, 255, 255, 0)
				transform scale(0.77)
				font-size 28px

			&.success

				& > div:nth-of-type(2)
					background-color rgb(92, 184, 92)
					transition background-color 250ms

				& > i:nth-of-type(1)
					color rgb(92, 184, 92)
					transform scale(1)
					transform-origin center
					transition color 250ms, transform 250ms

			&.failure

				& > div:nth-of-type(2)
					background-color rgb(217, 83, 79)
					transition background-color 250ms

				& > i:nth-of-type(2)
					color rgb(217, 83, 79)
					transform scale(1)
					transform-origin center
					transition color 250ms, transform 250ms

			&.success, &.failure

				& > svg

					path
						fill rgba(255, 255, 255, 0)
						transition fill 250ms

					circle
						fill rgb(255, 255, 255)
						stroke rgb(255, 255, 255)
						animation none
						transform scale(1.3)
						transform-origin center
						transition fill 250ms, stroke 250ms, transform 250ms

			&.showprogress

				& > span:not(:first-of-type)
					display none

				& > svg

					path
						stroke none

						&:nth-of-type(1)
							fill rgba(255, 255, 255, 0.5)

						&:nth-of-type(2)
							fill white

					circle
						fill rgba(255, 255, 255, 0)
						animation none

	.selectedIndicator
		position absolute
		background-color rgb(66, 139, 202)
		top 0
		right 0
		border-bottom-left-radius 4px
		border-bottom solid white 4px
		border-left solid white 4px

		i
			display block
			padding 9px 8px 9px 9px

	.videoIcon
		position absolute
		left 4px
		bottom 4px
		color white
		text-outline black

		i
			display block
			padding 9px 9px 9px 8px
			background-color rgba(0, 0, 0, 0.75)
			border-radius 4px

.navbar .btn-toolbar
	margin 7px 0

.btn.btn-text-left
	text-align left
	padding-left 12px
	padding-right 12px

ul.dropdown-menu li.selected a
	color white
	text-decoration none
	background-color rgb(66, 139, 202)

@media(max-width: 767px)
	.jumbotron p
		font-size 0.8em